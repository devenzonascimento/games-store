generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id            Int           @id @default(autoincrement())

  igdbId        Int           @unique

  price         Float
  discountType  DiscountType?
  discountValue Float?

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([igdbId])
}

enum DiscountType {
  PERCENTAGE
  FIXED
}
